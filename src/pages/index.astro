---
import Layout from '../layouts/Layout.astro';
---

<Layout>
	<main class="hero">
		<div class="content">
			<h1 class="title">inSilico</h1>
			<p class="subtitle">Experiments in software</p>
		</div>

		<footer class="site-footer">
			<a href="mailto:support@insilico.software">support@insilico.software</a>
		</footer>
	</main>

	<style>
		:root { --title-font: 'Playfair Display', serif; --ui-font: Inter, system-ui, -apple-system, 'Segoe UI', Roboto, sans-serif; }

		.hero {
			min-height: 100vh;
			display: flex;
			flex-direction: column;
			align-items: center;
			justify-content: center;
			position: relative;
			text-align: center;
			padding: 4rem 1rem;
			box-sizing: border-box;
		}

		.content {
			transform: translateY(-8%);
		}

		.title {
			margin: 0;
			font-family: var(--title-font);
			font-size: clamp(3.5rem, 14vw, 10rem);
			font-weight: 700;
			letter-spacing: -0.02em;
			line-height: 0.9;
		}

		.subtitle {
			margin: 1rem 0 0;
			font-family: var(--ui-font);
			font-weight: 300;
			font-size: clamp(1rem, 2.5vw, 1.5rem);
			color: #444;
		}

		.site-footer {
			position: absolute;
			bottom: 24px;
			left: 0;
			right: 0;
			text-align: center;
		}

		.site-footer a {
			font-family: var(--ui-font);
			color: inherit;
			text-decoration: none;
			font-size: 0.95rem;
			opacity: 0.85;
		}

		.site-footer a:hover {
			text-decoration: underline;
		}
	</style>
</Layout>
